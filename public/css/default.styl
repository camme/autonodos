@import 'bootstrap.min.css'
@import 'mixins'

body
    margin 20px 0

.value
    padding-left 20px
    font-weight bold
    text-transform uppercase

#lamp
    cursor pointer

.templates
    display none

.machines
    list-style none
    margin-top 20px
    margin-left 0
    .appliance
        background-color #eee
        border-radius 5px
        padding 10px 14px
        margin-bottom 10px

        &.on
            background-color #b2f274

        &.off
            background-color #f2b274

        .value
            float right
            display block
            width 30px
            text-align right


